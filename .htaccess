RewriteEngine On

# --- ATURAN BARU: Hapus /index atau /index.php ---
# Jika ada yang akses namadomain/index, lempar ke namadomain/
RewriteCond %{THE_REQUEST} /index(\.php)? [NC]
RewriteRule ^index(\.php)?$ / [L,R=301]

# --- ATURAN LAMA: Hapus .php dari file lain ---
# Contoh: /profile.php -> /profile
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# --- ATURAN LAMA: Hubungkan URL bersih ke file asli ---
# Contoh: /profile -> baca profile.php
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*?)/?$ $1.php [NC,L]